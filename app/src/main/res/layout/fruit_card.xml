<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/fruit_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/a_fruit_image"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/fruit_name_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#9FB6B5B8"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="@id/fruit_image"
        app:layout_constraintRight_toRightOf="@id/fruit_image"
        app:layout_constraintTop_toBottomOf="@id/fruit_image"
        tools:text="Fruit Name" />


</androidx.constraintlayout.widget.ConstraintLayout>